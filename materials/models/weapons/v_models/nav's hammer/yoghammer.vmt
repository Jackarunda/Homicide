{

	// MAIN SETTINGS
	$basetexture                "models\weapons\v_models\Nav's Hammer\diffuse"
	$bumpmap                    "models\weapons\v_models\Nav's Hammer\normal"

	// PHONG SHADING
	$phong                      1
	$phongboost                 1
	$phongfresnelranges         "[1 3 6]"
